<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" prefHeight="439.0" prefWidth="609.0" stylesheets="@../../../design/patientFormStyle.css" vgap="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.medlist.Controllers.Utiles.PatientForm">


    <Label styleClass="title-label" text="Ajouter Patient: " GridPane.columnSpan="2" />

    <Label text="Name:" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label styleClass="label" text="Prenom:" GridPane.rowIndex="2" />
    <TextField fx:id="prenomField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />


    <Label text="Email:" GridPane.rowIndex="3" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Contact Number:" GridPane.rowIndex="4" />
    <TextField fx:id="contactNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Symptoms:" GridPane.rowIndex="5" />
    <TextArea fx:id="symptomsArea" prefHeight="100" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Button fx:id="addButton" onAction="#savePatient" prefWidth="134.0" text="Ajouter" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label fx:id="errorLabel" textFill="red" GridPane.columnSpan="2" GridPane.rowIndex="7" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
